def SetThreshold():
    setT=Tk()
    Label(setT, text="Fold Change Threshold", justify=LEFT, padx=18).pack()
    #e1 = Entry(setT)
    #e1.insert(10,1.2)
    #e1.grid(row=0, column=1)
    #Button(setT, text='Enter', command=setT.quit).grid(row=3, column=0)
    MODES=[("Fold 1.2", "L"), ("Fold 1.5", "M"), ("Fold 2.0", "H"),]
    v=StringVar()
    v.set("L") #Initialize

    for text, mode in MODES:
        r = Radiobutton(setT, text=text, indicatoron=0,
                        width=18, padx=18, variable=v, value=mode)
        r.pack(anchor=W)
    
def SetPvalue():
    setP=Tk()
    Label(setP,text="P-value Threshold", justify=LEFT, padx=18).pack()
    #e1 = Entry(setP)
    #e1.insert(10,0.05)
    #e1.grid(row=0,column=1)
    MODES=[("P-Value 0.05", "L"), ("P-Value 0.01", "H"),]
    v=StringVar()
    v.set("L") #Initialize

    for text, mode in MODES:
        r = Radiobutton(setP, text=text, indicatoron=0,
                        width=18, padx=18, variable=v, value=mode)
        r.pack(anchor=W)
    
